# Infrastructure, databases, and networking shortcuts

# MongoDB: Database management shortcuts
# Usage: MongoDB operations and management
# Example: mongostart && mtail
alias mtail="tail -f /data/db/current/mongod.log"
alias mongo='mongosh'
alias mongod='mongod --config /usr/local/etc/mongod.conf'
alias mongostop='mongo admin --eval "db.shutdownServer()"'
alias mongostart='mongod --config /usr/local/etc/mongod.conf --fork'
alias mongorestart='mongostop && mongostart'
alias mongostat='mongostat --rowcount 0'
alias mongotop='mongotop'
alias mongodump='mongodump --out /tmp/mongodump'
alias mongorestore='mongorestore /tmp/mongodump'

# PostgreSQL: Database management shortcuts
# Usage: PostgreSQL operations and management
# Example: pgstart && pgstatus
alias pgstart="brew services start postgresql"
alias pgstop="brew services stop postgresql"
alias pgrestart="brew services restart postgresql"
alias pgstatus="brew services list | grep postgresql"
alias psql="psql -U postgres"
alias pgdump="pg_dump -U postgres"
alias pgrestore="pg_restore -U postgres"

# MySQL: Database management shortcuts
# Usage: MySQL operations and management
# Example: mysqlstart && mysql
alias mysqlstart="brew services start mysql"
alias mysqlstop="brew services stop mysql"
alias mysqlrestart="brew services restart mysql"
alias mysqlstatus="brew services list | grep mysql"
alias mysql="mysql -u root -p"
alias mysqldump="mysqldump -u root -p"

# Redis: In-memory database shortcuts
# Usage: Redis server management
# Example: redisstart && rediscli
alias redisstart="brew services start redis"
alias redisstop="brew services stop redis"
alias redisrestart="brew services restart redis"
alias redisstatus="brew services list | grep redis"
alias rediscli="redis-cli"
alias redismon="redis-cli monitor"

