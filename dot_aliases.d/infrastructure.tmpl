# HTTP Requests: Web request utilities
# Usage: HTTP client shortcuts for API testing
# Example: get https://api.example.com/users
alias wget="wget2"
alias get="curl -X GET"
alias post="curl -X POST"
alias put="curl -X PUT"
alias delete="curl -X DELETE"
alias patch="curl -X PATCH"
alias head="curl -I"
alias json="curl -H 'Content-Type: application/json'"
alias curl-time="curl -w '@-' -o /dev/null -s"
alias curl-headers="curl -D- -o /dev/null -s"
alias curl-follow="curl -L"
alias curl-silent="curl -s"
alias curl-verbose="curl -v"
alias curl-download="curl -O"
alias curl-resume="curl -C -"

# Network Information: IP and DNS utilities
# Usage: Network diagnostics and information
# Example: ip && whois example.com
alias ip='echo "\nLocal IPs:" && ifconfig | grep "inet " | awk '\''{
printf "\t%s\n", $2}'\'' && echo "External IP:" && curl -s ipinfo.io/ip | awk '\''{
printf "\t%s\n", $0}'\''\;'
alias whois="whois -h whois-servers.net"
alias nslookup="nslookup"
alias dig="dig +short"
alias traceroute="traceroute"
alias netstat="netstat -tuln"
alias ss="ss -tuln"

# SSH: Secure shell shortcuts
# Usage: SSH connection and management
# Example: sshkey && sshconfig
alias sshkey="cat ~/.ssh/id_rsa.pub | pbcopy && echo 'SSH key copied to clipboard'"
alias sshconfig="$EDITOR ~/.ssh/config"
alias sshlist="grep -E '^Host ' ~/.ssh/config"
alias sshadd="ssh-add -K ~/.ssh/id_rsa"

# VPN: Virtual private network utilities
# Usage: VPN connection management (if applicable)
# Example: vpnstatus && vpnconnect
alias vpnstatus="scutil --nc list"
alias vpnconnect="networksetup -connectpppoeservice"
alias vpndisconnect="networksetup -disconnectpppoeservice"