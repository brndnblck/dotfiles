# Caddy: Local development server
# Usage: Manage Caddy development server
# Example: dev-start && dev-logs
alias dev-start="sudo caddy start --config $(brew --prefix)/etc/Caddyfile"
alias dev-stop="sudo caddy stop"
alias dev-restart="sudo caddy reload --config $(brew --prefix)/etc/Caddyfile"
alias dev-config="$EDITOR $(brew --prefix)/etc/Caddyfile"
alias dev-logs="sudo caddy logs"
alias dev-run="caddy run"
alias dev-local="caddy run --config Caddyfile"
alias dev-fmt="caddy fmt --overwrite"

