# Development tools and language-specific shortcuts

# Ruby: Package management and execution
# Usage: bundle install with 8 parallel jobs
# Example: bi
alias rake="noglob rake"
alias bundle="noglob bundle"
alias bi="bundle install -j8"
alias bu="bundle update"
alias be="bundle exec"
alias bv="bundle viz"

# Python: Version management and tools
# Usage: python3 as default python
# Example: python --version
alias python="python3"
alias pip="pip3"
alias pys="python3 -m http.server"
alias ipy="ipython"
alias jn="jupyter notebook"

# Python Virtual Environments: Environment management
# Usage: Create and manage Python virtual environments
# Example: venv myenv && vact
alias venv="python3 -m venv"
alias vact="source bin/activate"
alias vdeact="deactivate"
alias vrm="rm -rf bin include lib lib64 share pyvenv.cfg"

