{
  "$schema": "https://opencode.ai/config.json",
  "provider": "anthropic",
  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "anthropic/claude-3-5-haiku-20241022",
  "theme": "dark",
  "share": "manual",
  "autoupdate": false,
  "permission": {
    "edit": "ask",
    "bash": {
      "rm *": "ask",
      "rmdir *": "ask", 
      "mv *": "ask",
      "cp *": "ask",
      "sudo *": "ask",
      "su *": "ask",
      "chmod *": "ask",
      "chown *": "ask",
      "*": "allow"
    }
  },
  "formatter": {
    "javascript": {
      "command": ["prettier"]
    },
    "typescript": {
      "command": ["prettier"]
    },
    "json": {
      "command": ["prettier"]
    },
    "python": {
      "command": ["black"]
    },
    "rust": {
      "command": ["rustfmt"]
    },
    "go": {
      "command": ["gofmt"]
    },
    "ruby": {
      "command": ["rubocop"]
    }
  },
  "instructions": [
    "AGENTS.md",
    "CONTRIBUTING.md",
    "rules/*.md",
    "rules/languages/*.md"
  ],
  "mcp": {
    "docker-toolkit": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": true
    }
  },
  "provider": {
    "openai": {
      "npm": "@ai-sdk/openai",
      "name": "OpenAI",
      "options": {
        "apiKey": "{{ env "OPENAI_API_KEY" }}"
      },
      "models": {
        "gpt-4o": {
          "name": "GPT-4o"
        },
        "gpt-5": {
          "name": "GPT-5"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.2": {
          "name": "Llama 3.2"
        },
        "llama3.1": {
          "name": "Llama 3.1" 
        },
        "llama3": {
          "name": "Llama 3"
        },
        "codellama": {
          "name": "Code Llama"
        },
        "qwen2.5-coder": {
          "name": "Qwen2.5 Coder"
        }
      }
    }
  }
}