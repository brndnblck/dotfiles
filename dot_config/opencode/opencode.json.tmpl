{
  "$schema": "https://opencode.ai/config.json",
  "provider": "anthropic",
  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "anthropic/claude-haiku-20240307",
  "theme": "dark",
  "share": "manual",
  "autoupdate": false,
  "keybinds": {
    "accept": "tab",
    "reject": "escape",
    "accept_word": "ctrl+right"
  },
  "formatter": {
    "javascript": "prettier",
    "typescript": "prettier",
    "json": "prettier",
    "python": "black",
    "rust": "rustfmt",
    "go": "gofmt",
    "ruby": "rubocop"
  },
  "instructions": [
    "AGENTS.md",
    "rules/*.md",
    "rules/languages/*.md"
  ],
  "mcp": {
    "docker-toolkit": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": true
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.2": {
          "name": "Llama 3.2"
        },
        "llama3.1": {
          "name": "Llama 3.1" 
        },
        "llama3": {
          "name": "Llama 3"
        },
        "codellama": {
          "name": "Code Llama"
        },
        "qwen2.5-coder": {
          "name": "Qwen2.5 Coder"
        }
      }
    }
  }
}