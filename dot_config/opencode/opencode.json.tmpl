{
  "$schema": "https://opencode.ai/config.json",
  "provider": "anthropic",
  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "anthropic/claude-haiku-20240307",
  "theme": "dark",
  "share": "manual",
  "autoupdate": false,
  "permission": {
    "edit": "ask",
    "bash": {
      "ls": "allow",
      "pwd": "allow", 
      "cat": "allow",
      "file": "allow",
      "which": "allow",
      "echo": "allow",
      "cd": "allow",
      "test": "allow",
      "grep": "allow",
      "find": "allow",
      "head": "allow",
      "tail": "allow",
      "wc": "allow",
      "sort": "allow",
      "uniq": "allow",
      "cut": "allow",
      "awk": "allow",
      "sed": "allow",
      "tr": "allow",
      "basename": "allow",
      "dirname": "allow",
      "realpath": "allow",
      "readlink": "allow",
      "stat": "allow",
      "du": "allow",
      "diff": "allow",
      "*": "ask"
    }
  },
  "formatter": {
    "javascript": {
      "command": ["prettier"]
    },
    "typescript": {
      "command": ["prettier"]
    },
    "json": {
      "command": ["prettier"]
    },
    "python": {
      "command": ["black"]
    },
    "rust": {
      "command": ["rustfmt"]
    },
    "go": {
      "command": ["gofmt"]
    },
    "ruby": {
      "command": ["rubocop"]
    }
  },
  "instructions": [
    "AGENTS.md",
    "CONTRIBUTING.md",
    "rules/*.md",
    "rules/languages/*.md"
  ],
  "mcp": {
    "docker-toolkit": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": true
    }
  },
  "provider": {
    "openai": {
      "npm": "openai",
      "name": "OpenAI",
      "options": {
        "apiKey": "{{ env "OPENAI_API_KEY" }}"
      },
      "models": {
        "gpt-4o": {
          "name": "GPT-4o"
        },
        "gpt-5": {
          "name": "GPT-5"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.2": {
          "name": "Llama 3.2"
        },
        "llama3.1": {
          "name": "Llama 3.1" 
        },
        "llama3": {
          "name": "Llama 3"
        },
        "codellama": {
          "name": "Code Llama"
        },
        "qwen2.5-coder": {
          "name": "Qwen2.5 Coder"
        }
      }
    }
  }
}